<% content_for :dashboard do %>
  <div id="right_menu">Right menu items here</div>
  <%= content_for?(:all_resto_dashboard) ? yield(:all_resto_dashboard) : yield %>
<% end %>
<%= render template: "admins/dashboard/index" %>

<div id="page-wrapper" class="gray-bg">
	<div class="row wrapper border-bottom white-bg page-heading">
		<div class="col-lg-10">
	        <h2 style="margin-top: 20px;">All Resto Users</h2>
	        <ol class="breadcrumb">
	            <li>
	                <a href="index.html">Dashboard</a>
	            </li>
	            <li>
	                <a>Resto Users</a>
	            </li>
	            <li class="active">
	                <strong>All Resto Users</strong>
	            </li>
	        </ol>
	    </div>
	</div>
	<div class="wrapper wrapper-content animated fadeInRight ecommerce">
        <div class="row">
        	<div class="col-lg-12">
        		<div class="ibox">
        			<div class="ibox-content">
        				<table class="footable table table-stripped toggle-arrow-tiny footable-loaded phone breakpoint footable-filtering" data-paging="true" data-filtering="true" data-sorting="true" data-filter-filters='true'>
        					<thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>eMail</th>
                                    <th>Restaurant</th>
                                    <th>Last Signin</th>
                                    <th>Status</th>
                                    <th data-sortable="false" data-filterable="false">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            	<% @restos.each do |resto| %>
                            		<tr>
                            			<td class="footable-visible">
                            				<strong><%= resto.fullname %></strong>
                            			</td>
                            			<td class="footable-visible">
                            				<%= resto.email %>
                            			</td>
                            			<td class="footable-visible">
                            				<%= resto.restaurant.name %>
                            			</td>
                            			<td class="footable-visible">
                            				<%= resto.last_sign_in_at %>
                            			</td>
                            			<td class="footable-visible">
                            				<span class="<%= resto.active ? 'label label-primary' : 'label label-danger' %>  label label-primary">
                                                <%= resto.active ? 'Active' : 'Inactive'%>
                                            </span>
                            			</td>
                            			<td class="text-right footable-visible footable-last-column">
                                            <%= link_to 'Edit', edit_resto_registration_path(resto), class: 'btn btn-default btn-sm' %>
	                                    </td>
                            		</tr>
                            	<% end %>
                            </tbody>
        				</table>
        			</div>
        		</div>
        	</div>
        </div>
	</div>
</div>
<script type="text/javascript">
    jQuery(function($){
    $('.footable').footable({
        "paging": {
            "size": 15
        }
    });
});
</script>