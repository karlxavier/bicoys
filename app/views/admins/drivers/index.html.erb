<% content_for :dashboard do %>
  <div id="right_menu">Right menu items here</div>
  <%= content_for?(:drivers_dashboard) ? yield(:drivers_dashboard) : yield %>
<% end %>
<%= render template: "admins/dashboard/index" %>

<div id="page-wrapper" class="gray-bg">
	<div class="row wrapper border-bottom white-bg page-heading">
		<div class="col-lg-10">
	        <h2 style="margin-top: 20px;">All Drivers</h2>
	        <ol class="breadcrumb">
	            <li>
	                <%= link_to "Dashboard", admins_dashboard_index_path %>
	            </li>
	            <li class="active">
	                <strong>All Drivers</strong>
	            </li>
	        </ol>
	    </div>
	</div>
	<div class="wrapper wrapper-content animated fadeInRight ecommerce">
        <div class="row">
        	<div class="col-lg-12">
        		<div class="ibox">
        			<div class="ibox-content">

        				<table class="footable table table-stripped toggle-arrow-tiny footable-loaded default breakpoint footable-filtering" data-paging-limit="40" data-paging="true" data-filter-filters='true'>
        					<%= link_to 'Add New Driver', new_admins_driver_path, class: "btn btn-warning btn-sm" %>
                            <thead>
                                <tr>
                                    <th data-toggle="true" class="footable-visible footable-first-column footable-sortable">Name</th>
                                    <th data-hide="phone" class="footable-visible footable-sortable">License</th>
                                    <th data-hide="all" class="footable-sortable">aka</th>
                                    <th data-hide="phone" class="footable-visible footable-sortable footable-sorted-desc">Status</th>
                                    <th class="text-right footable-visible footable-last-column" data-sort-ignore="true" data-search-ignore>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            	<% @drivers.each do |driver| %>
                            		<tr class="footable">
                            			<td class="footable-visible">
                            				<strong> <%= driver.name %> </strong>
                            			</td>
                            			<td class="footable-visible">
                            				<%= driver.driver_license %>
                            			</td>
                            			<td class="footable-visible">
                            				<%= driver.aka %>
                            			</td>
                            			<td class="footable-visible">

                            				<span class="<%= driver.driver_status_id == 2 ? 'label label-primary' : 'label label-danger' %>  label label-primary"><%= restaurant.active ? 'Active' : 'Inactive'%></span>
                            			</td>
                            			<td class="text-right footable-visible footable-last-column">
	                                        <div class="btn-group">
                                                <%= link_to 'Edit', edit_admins_driver_path(driver), class: 'btn-white btn btn-xs' %>
	                                        </div>
	                                    </td>
                            		</tr>
                            	<% end %>
                            </tbody>
                
        				</table>
        			</div>
        		</div>
        	</div>
        </div>
	</div>
</div>
<script type="text/javascript">
    jQuery(function($){
    $('.footable').footable({
        "paging": {
            "size": 15
        }
    });
});
</script>