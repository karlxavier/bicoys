<div id="verify_mobile">
    <div class="col-md-12">
        <%= form_for user, remote: true do |f| %>   
            <fieldset class="form-horizontal">

                <div class="form-group text-center">
                    <label class="col-sm-2 control-label">Mobile:</label>
                    <div class="col-sm-10">
                        <%= f.text_field :mobile_no, class: "form-control", placeholder: "area code and mobile number",required: "", data: {mask: '+999999999999'} %>
                    </div>
                </div>
                <%= button_tag(type: 'Submit', class: "col-sm-6 col-sm-offset-3 btn btn-warning") do %>
                    <i class="icon-ok icon-white"></i> Send Verification Code
                <% end %> 

            </fieldset>
        <% end %>
    </div>
</div>
