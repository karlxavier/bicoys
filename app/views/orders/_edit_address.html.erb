<div class="modal inmodal in" id="modal-shows" tabindex="-1" role="dialog" aria-hidden="true" style="display: block; padding-right: 15px;">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <%= form_for @user_address, remote: true do |f| %>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">User Address</h4>
                    <small class="font-bold">Where you want to deliver your order?</small>
                </div>
                <div class="modal-body">
                    <p><strong>Note </strong> Please ensure that you supply all necessary and correct details.</p>
                        <div class="form-group">
                            <%= f.text_field :barangay_subdv, class: "form-control", placeholder: "Barangay / Subdivision Name (optional)" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :additional_directions, class: "form-control", placeholder: "Additional directions", required: "" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :landline_number, class: "form-control", placeholder: "Landline number (optional)" %>
                        </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                        <i class="icon-ok icon-white"></i> Save Changes
                    <% end %> 
                </div>
            <% end %>
        </div>
    </div>
</div>