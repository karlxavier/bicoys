<% content_for :dashboard do %>
  <div id="right_menu">Right menu items here</div>
  <%= content_for?(:all_resto_dashboard) ? yield(:all_resto_dashboard) : yield %>
<% end %>
<%= render template: "restos/restaurants/dashboard" %>

<div id="page-wrapper" class="gray-bg">
	<div class="row wrapper border-bottom white-bg page-heading">
		<div class="col-lg-10">
	        <h2 style="margin-top: 20px;">All Menus</h2>
	        <ol class="breadcrumb">
	            <li>
	                <a href="index.html">Dashboard</a>
	            </li>
	            <li>
	                <a>Resto Menus</a>
	            </li>
	            <li class="active">
	                <strong>All Resto Menus</strong>
	            </li>
	        </ol>
	    </div>
	</div>
	<div class="wrapper wrapper-content animated fadeInRight ecommerce">
		<div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="product_name">Menu's Name</label>
                        <input type="text" id="product_name" name="product_name" value="" placeholder="Product Name" class="form-control">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="status">Status</label>
                        <select name="status" id="status" class="form-control">
                            <option value="1" selected="">Enabled</option>
                            <option value="0">Disabled</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
        	<div class="col-lg-12">
        		<div class="ibox">
        			<div class="ibox-content">
        				<table class="footable table table-stripped toggle-arrow-tiny tablet breakpoint footable-loaded" data-page-size="15">
        					<thead>
                                <tr>
                                    <th data-toggle="true" class="footable-visible footable-first-column footable-sortable">Name<span class="footable-sort-indicator"></span></th>
                                    <th data-hide="phone" class="footable-visible footable-sortable">Description<span class="footable-sort-indicator"></span></th>
                                    <th data-hide="all" class="footable-sortable">Price<span class="footable-sort-indicator"></span></th>
                                    <th data-hide="phone" class="footable-visible footable-sortable footable-sorted-desc">Category%<span class="footable-sort-indicator"></span></th>
                                    <th data-hide="phone" class="footable-visible footable-sortable">Status<span class="footable-sort-indicator"></span></th>
                                    <th class="text-right footable-visible footable-last-column" data-sort-ignore="true">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            	<% @menus.each do |menu| %>
                            		<tr>
                            			<td class="footable-visible">
                            				<strong><%= menu.name %></strong>
                            			</td>
                            			<td class="footable-visible">
                            				<%= menu.description %>
                            			</td>
                            			<td class="footable-visible">
                            				<%= menu.total_price %>
                            			</td>
                            			<td class="footable-visible">
                            				<p><%= menu.menu_category.name %></p>
                            			</td>
                            			<td class="footable-visible">

                            				<span class="<%= menu.active ? 'label label-primary' : 'label label-danger' %>  label label-primary">
                                                <%= menu.active ? 'Active' : 'Inactive'%>
                                            </span>
                            			</td>
                            			<td class="text-right footable-visible footable-last-column">
	                                        <div class="btn-group">
                                                <%= link_to 'Edit', edit_restos_restaurant_menu_path(@restaurant,menu), class: 'btn-white btn btn-xs' %>
	                                        </div>
	                                    </td>
                            		</tr>
                            	<% end %>
                            </tbody>
        				</table>
        			</div>
        		</div>
        	</div>
        </div>
	</div>
</div>