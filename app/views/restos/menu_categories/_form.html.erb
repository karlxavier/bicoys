<div class="wrapper wrapper-content animated fadeInRight ecommerce">
	<%= form_for [:restos, @restaurant, @menu_category] do |f| %>
		<div class="row">
			<div class="col-lg-12">
				<fieldset class="form-horizontal">
					<div class="form-group"><label class="col-sm-2 control-label">Name:</label>
	                    <div class="col-sm-10">
	                    	<%= f.text_field :name, class: "form-control", placeholder: "Category's Name" %>
	                    </div>
	                </div>
				</fieldset>

	                <br>
	                <%= button_tag(type: 'Submit', class: "col-lg-3 btn btn-primary") do %>
				        <i class="icon-ok icon-white"></i> Save
				    <% end %> 
				    <%= link_to 'Cancel', restos_restaurant_menu_categories_path(@restaurant), class: 'col-lg-3 btn btn-default', style: 'margin-left: 10px;' %>
			</div>
		</div>
	<% end %>
</div>
